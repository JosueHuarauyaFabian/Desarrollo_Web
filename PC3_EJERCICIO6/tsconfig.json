{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "./src",
      "typeRoots": ["./src/types", "./node_modules/@types"], // Asegura que incluya tus tipos personalizados
      "paths": {
        "@types/*": ["types/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  